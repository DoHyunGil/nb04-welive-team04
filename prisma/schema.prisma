generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         Int        @id @default(autoincrement())
  username   String
  password   String
  email      String
  contact    String
  name       String
  role       Role
  avatar     String
  joinStatus joinStatus
  isActive   Boolean
  adminOf    adminOf?
  resident   Resident?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @default(now()) @updatedAt
  Complain   Complain[]
  Poll       Poll[]
  Comment    Comment[]
  Notice     Notice[]
}

model adminOf {
  id                    Int        @id @default(autoincrement())
  name                  String
  address               String
  description           String
  officeNumber          String
  buildingNumberFrom    Int
  buildingNumberTo      Int
  floorCountPerBuilding Int
  unitCountPerFloor     Int
  userId                Int        @unique
  user                  User       @relation(fields: [userId], references: [id])
  apartment             Apartment?
  createdAt             DateTime   @default(now())
  updatedAt             DateTime   @default(now()) @updatedAt
}

model Resident {
  id            Int       @id @default(autoincrement())
  userId        Int       @unique
  user          User      @relation(fields: [userId], references: [id])
  isHouseholder Boolean
  building      Int
  unit          Int
  apartmentId   Int
  apartment     Apartment @relation(fields: [apartmentId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
}

model Apartment {
  id           Int        @id @default(autoincrement())
  name         String
  address      String
  description  String
  officeNumber Int
  buildings    Int[]
  units        Int[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @default(now()) @updatedAt
  adminOf      adminOf    @relation(fields: [adminOfId], references: [id])
  adminOfId    Int        @unique
  resident     Resident[]
  Complain     Complain[]
  Poll         Poll[]
  Notice       Notice[]
  Event        Event[]
}

model Complain {
  id            Int            @id @default(autoincrement())
  title         String
  content       String
  isPublic      Boolean        @default(false)
  viewCount     Int            @default(0)
  status        complainStatus @default(PENDING)
  comments      Comment[]
  apartmentId   Int
  apartment     Apartment      @relation(fields: [apartmentId], references: [id])
  complainantId Int
  complainant   User           @relation(fields: [complainantId], references: [id])
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @default(now()) @updatedAt
}

model Poll {
  id          Int        @id @default(autoincrement())
  title       String
  content     String
  status      PollStatus
  apartmentId Int
  apartment   Apartment  @relation(fields: [apartmentId], references: [id])
  authorId    Int
  author      User       @relation(fields: [authorId], references: [id])
  startDate   DateTime
  endDate     DateTime
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @default(now()) @updatedAt
}

model Comment {
  id         Int      @id @default(autoincrement())
  content    String
  authorId   Int
  author     User     @relation(fields: [authorId], references: [id])
  complainId Int
  complain   Complain @relation(fields: [complainId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt
  notice     Notice?  @relation(fields: [noticeId], references: [id])
  noticeId   Int?
}

model Notice {
  id          Int            @id @default(autoincrement())
  title       String
  content     String
  category    NoticeCategory
  isPinned    Boolean
  viewCount   Int            @default(0)
  authorId    Int
  author      User           @relation(fields: [authorId], references: [id])
  apartmentId Int
  apartment   Apartment      @relation(fields: [apartmentId], references: [id])
  event       Event?         @relation(fields: [eventId], references: [id])
  eventId     Int?
  comments    Comment[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @default(now()) @updatedAt
}

model Event {
  id          Int       @id @default(autoincrement())
  category    String
  title       String
  apartmentId Int
  apartment   Apartment @relation(fields: [apartmentId], references: [id])
  //resourceId
  //ResourceType
  startDate   DateTime
  endDate     DateTime
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now()) @updatedAt
  Notice      Notice[]
}

enum Role {
  SUPER_ADMIN
  ADMIN
  RESIDENT
}

enum joinStatus {
  PENDING
  APPROVED
  REJECTED
}

enum complainStatus {
  PENDING
  IN_PROGRESS
  RESOLVED
  REJECTED
}

enum PollStatus {
  PENDING
}

enum NoticeCategory {
  MAINTENANCE
  EMERGENCY
  COMMUNITY
  RESIDENT_VOTE
  RESIDENT_COUNCIL
  ETC
}
